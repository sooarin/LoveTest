<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/esfp"
    tools:context=".Fragments.Result.EsfpResult">

    <TextView
        android:id="@+id/esfp_tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:fontFamily="@font/mapo_golden_pier"
        android:text="「 ESFP 」"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="70sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/esfp_tv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/mapo_golden_pier"
        android:text="썸도 환승도 5G 극한러버"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/esfp_tv1" />


    <ImageView
        android:id="@+id/esfp_iv"
        android:layout_width="350dp"
        android:layout_height="450dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/edge"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/esfp_tv2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/mapo_golden_pier"
        android:textColor="@color/black"
        android:text="연애할 때 한없이 다정하고\n콩깍지가 단단히 씌여서\n
매일 연애 1일차 같은\n설렘과 이벤트가 가득할 거예요.\n썸 추진력도 5G급이라
\n연애 성공률은걱정할 것 없겠네요!\n하지만 생각이 자주 바뀌는 편이라\n나도 모르는
사이 마음이\n갈대처럼 흔들릴 수 있어요.\n당신의 무한동력 같은 에너지로\n연인과
활동적인 데이트를 즐기다 보면\n마음이 다시 불타오를 수 있어요."
        android:textAlignment="center"
        android:textSize="19sp"
        android:layout_marginTop="110dp"
        app:layout_constraintTop_toBottomOf="@+id/esfp_tv2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>