<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/estp"
    tools:context=".Fragments.Result.EstpResult">

    <TextView
        android:id="@+id/estp_tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:fontFamily="@font/mapo_golden_pier"
        android:text="「 ESTP 」"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="70sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/estp_tv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/mapo_golden_pier"
        android:text="브레이크 고장난 연애직진러"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/estp_tv1" />


    <ImageView
        android:id="@+id/estp_iv"
        android:layout_width="350dp"
        android:layout_height="450dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/edge"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/estp_tv2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/mapo_golden_pier"
        android:textColor="@color/black"
        android:text="초면이어도 10분만에 절친이 되는\n핵인싸에 연애는
식은 죽 먹기죠.\n이상형을 만나면 어마어마한\n애정 폭발력으로 썸부터 연애까지\n빠르게
직진하는 스타일이에요.\n남의 눈치를 보지 않고 애정표현이나\n스킨십도 적극적으로 하는
편이라\n연인에게 사랑받는 느낌을 듬뿍 주는\n프로 표현러군요!\n갈등이 생겨도 피하지 않고\n
뒤끝도 없어서 쿨한 연애가 가능해요."
        android:textAlignment="center"
        android:textSize="19dp"
        android:layout_marginTop="120dp"
        app:layout_constraintTop_toBottomOf="@+id/estp_tv2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        />


</androidx.constraintlayout.widget.ConstraintLayout>