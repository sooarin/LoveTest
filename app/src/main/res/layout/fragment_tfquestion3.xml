<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/question_back"
    tools:context=".Fragments.Question.TFFragment3">

    <TextView
        android:id="@+id/tfq3_tv3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp"
        android:fontFamily="@font/mapo_golden_pier"
        android:text="Q9.\n힘들게 이벤트를 준비한 나를 신나게 할 연인의 칭찬은?"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="32sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:background="#00ff0000"
        android:id="@+id/tfq3_ib1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="140dp"
        android:src="@drawable/selection"
        android:theme="@style/AppTheme.ButtonRipple"
        android:foreground="?selectableItemBackground"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tfq3_tv3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="사랑해 최고야\n나 완전 감동했어"
        android:textAlignment="center"
        android:textSize="19sp"
        android:textStyle="bold"
        android:layout_marginTop="167dp"
        android:textColor="@color/black"
        android:fontFamily="@font/mapo_golden_pier"
        app:layout_constraintTop_toBottomOf="@+id/tfq3_tv3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        />

    <ImageButton
        android:background="#00ff0000"
        android:id="@+id/tfq3_ib2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:src="@drawable/selection"
        android:theme="@style/AppTheme.ButtonRipple"
        android:foreground="?selectableItemBackground"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tfq3_ib1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="고마워 요즘 바쁠텐데\n언제 이런 걸 생각했어?"
        android:textAlignment="center"
        android:textSize="19sp"
        android:layout_marginTop="76dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:fontFamily="@font/mapo_golden_pier"
        app:layout_constraintTop_toBottomOf="@+id/tfq3_ib1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>