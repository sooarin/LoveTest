<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/isfj"
    tools:context=".Fragments.Result.IsfjResult">

    <TextView
        android:id="@+id/isfj_tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:fontFamily="@font/mapo_golden_pier"
        android:text="「 ISFJ 」"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="70sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/isfj_tv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/mapo_golden_pier"
        android:text="뒤끝 오지는 사랑집착꾼"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/isfj_tv1" />


    <ImageView
        android:id="@+id/isfj_iv"
        android:layout_width="350dp"
        android:layout_height="450dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/edge"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/isfj_tv2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/mapo_golden_pier"
        android:textColor="@color/black"
        android:text="작은 기념일, 이벤트까지 꼼꼼하게\n챙기며 연인의 행복을
확실히\n서포트하는 사랑덕후에요.\n상대를 행복하게 해주는 것이\n연애의 의무 중 하나라\n
생각하기 때문이죠.\n누구보다 아낌없이 사랑을 주는 만큼\n때때로 상대의 사랑을\n확인하고
싶기도 할 거예요.\n나의 노력을 존중해주고\n진심으로 고마워하는 사람을 만나면\n
오랫동안 사랑 넘치는 연애를\n기대해도 좋아요."
        android:textAlignment="center"
        android:textSize="19dp"
        android:layout_marginTop="95dp"
        app:layout_constraintTop_toBottomOf="@+id/isfj_tv2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>