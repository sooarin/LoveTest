<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/entp"
    tools:context=".Fragments.Result.EntpResult">

    <TextView
        android:id="@+id/entp_tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:fontFamily="@font/mapo_golden_pier"
        android:text="「 ENTP 」"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="70sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/entp_tv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/mapo_golden_pier"
        android:text="단호박 먹은 연애 불도저"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/entp_tv1" />


    <ImageView
        android:id="@+id/entp_iv"
        android:layout_width="350dp"
        android:layout_height="450dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/edge"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/entp_tv2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/mapo_golden_pier"
        android:textColor="@color/black"
        android:text="썸 추진력 상위 1%\n좋으면 앞뒤 안 재고 돌진하며\n썸도 연애도 빠르게
시작하는 금사빠!\n말발이 타고나서\n격렬한 토론도 좋아해요\n관심있는 주제로 밤새 떠들 수 있는\n상대라면 운명적인 연애를\n시작할 수 있을 거예요.\n
호불호 확실하고\n싫증을 빨리 내는
편이라\n새로운 핫플이나 액티비티를 함께\n찾아다닐 수 있는 사람을 만나면\n지루할 틈 없이
다이내믹한\n연애를 즐길 수 있어요."
        android:textAlignment="center"
        android:textSize="19dp"
        android:layout_marginTop="85dp"
        app:layout_constraintTop_toBottomOf="@+id/entp_tv2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>